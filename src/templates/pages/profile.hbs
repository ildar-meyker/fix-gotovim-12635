---
title: Доставка готовой еды
layout: default.hbs
---


{{> header}}

<main>

    <div class="layout__center">

        <nav class="nav-breadcrumbs">
            <a href="#" class="nav-breadcrumbs__link">Главная</a>
            <span class="nav-breadcrumbs__sep">/</span>
            <span class="nav-breadcrumbs__text">Персональный раздел</span>
        </nav>
        
        <div class="layout-profile">
            
            <div class="layout-profile__content">
                <h1 class="section__title page-profile__title-desktop">Профиль пользователя</h1>
                
                <div>

                    <form action="#" class="form-profile">
                        
                        <h3 class="form-profile__header">
                            <i class="icon-person-outline"></i>
                            <span>Персональные данные</span>
                        </h3>
                        
                        <div>
                            <div class="form-profile__row">
                                <label class="form-profile__item">
                                    <div class="form-profile__label">Имя</div>
                                    <input type="text" class="input-default">
                                </label>
                                <label class="form-profile__item">
                                    <div class="form-profile__label">Фамилия</div>
                                    <input type="text" class="input-default">
                                </label>
                                <label class="form-profile__item">
                                    <div class="form-profile__label">Отчество</div>
                                    <input type="text" class="input-default">
                                </label>
                            </div>

                            <div class="form-profile__row">
                                <label class="form-profile__item">
                                    <div class="form-profile__label">Телефон</div>
                                    <input type="text" class="input-default" placeholder="+7 (___) ___-__-__">
                                </label>
                                <label class="form-profile__item">
                                    <div class="form-profile__label">Email</div>
                                    <input type="text" class="input-default">
                                </label>
                            </div>
                        </div>
                        
                        <div class="form-profile__apply">
                            <button type="submit" class="btn-orange">Сохранить</button>
                        </div>
                    </form>

                    <form action="#" class="form-profile">
                        
                        <h3 class="form-profile__header">
                            <i class="icon-bell"></i>
                            <span>Уведомления</span>
                        </h3>

                        <div>
     
                            <div class="form-profile__notify">
                                <div class="form-profile__notify__label">
                                    Поступил товар на который вы <a href="#">подписались</a>
                                </div>
                                <div class="form-profile__notify__group">
                                    <div class="form-profile__notify__radio">
                                        <div class="form-profile__notify__type">Email</div>
                                        <label class="profile-content-form__switch">
                                            <input type="checkbox">
                                            <span class="profile-content-form__slider"></span>
                                        </label>
                                    </div>
                                    <div class="form-profile__notify__radio">
                                        <div class="form-profile__notify__type">WhatsApp</div>
                                        <label class="profile-content-form__switch">
                                            <input type="checkbox">
                                            <span class="profile-content-form__slider"></span>
                                        </label>
                                    </div>
                                    <div class="form-profile__notify__radio">
                                        <div class="form-profile__notify__type">SMS</div>
                                        <label class="profile-content-form__switch">
                                            <input type="checkbox">
                                            <span class="profile-content-form__slider"></span>
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-profile__notify">
                                <div class="form-profile__notify__label">
                                    Заканчивается акция на товар в корзине
                                </div>
                                <div class="form-profile__notify__group">
                                    <div class="form-profile__notify__radio">
                                        <div class="form-profile__notify__type">Email</div>
                                        <label class="profile-content-form__switch">
                                            <input type="checkbox">
                                            <span class="profile-content-form__slider"></span>
                                        </label>
                                    </div>
                                    <div class="form-profile__notify__radio">
                                        <div class="form-profile__notify__type">WhatsApp</div>
                                        <label class="profile-content-form__switch">
                                            <input type="checkbox">
                                            <span class="profile-content-form__slider"></span>
                                        </label>
                                    </div>
                                    <div class="form-profile__notify__radio">
                                        <div class="form-profile__notify__type">SMS</div>
                                        <label class="profile-content-form__switch">
                                            <input type="checkbox">
                                            <span class="profile-content-form__slider"></span>
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-profile__notify">
                                <div class="form-profile__notify__label">
                                    Информирование о статусах заказа
                                </div>
                                <div class="form-profile__notify__group">
                                    <div class="form-profile__notify__radio">
                                        <div class="form-profile__notify__type">Email</div>
                                        <label class="profile-content-form__switch">
                                            <input type="checkbox">
                                            <span class="profile-content-form__slider"></span>
                                        </label>
                                    </div>
                                    <div class="form-profile__notify__radio">
                                        <div class="form-profile__notify__type">WhatsApp</div>
                                        <label class="profile-content-form__switch">
                                            <input type="checkbox">
                                            <span class="profile-content-form__slider"></span>
                                        </label>
                                    </div>
                                    <div class="form-profile__notify__radio">
                                        <div class="form-profile__notify__type">SMS</div>
                                        <label class="profile-content-form__switch">
                                            <input type="checkbox">
                                            <span class="profile-content-form__slider"></span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-profile__apply">
                            <button type="submit" class="btn-orange">Сохранить</button>
                        </div>
                    </form>

                    <form action="#" class="form-profile">
                        
                        <h3 class="form-profile__header">
                            <i class="icon-protect"></i>
                            <span>Безопасность</span>
                        </h3>

                        <div>
                            <div class="form-profile__row">
                                <label class="form-profile__item">
                                    <div class="form-profile__label">Новый пароль</div>
                                    <input type="text" class="input-default">
                                </label>

                                <label class="form-profile__item">
                                    <div class="form-profile__label">Повторите новый пароль</div>
                                    <input type="text" class="input-default">
                                </label>
                            </div>
                        </div>
                        
                        <div class="form-profile__apply">
                            <button type="submit" class="btn-orange">Сохранить</button>
                        </div>
                    </form>

                </div>

            </div>
            <div class="layout-profile__sidebar">
                <h1 class="section__title page-profile__title-mobile">Профиль пользователя</h1>
                <ul class="profile-aside__list">
                    <li class="profile-aside__item">
                        <a href="#" class="profile-aside__link">
                            <img src="images/profile/1.png" alt="">
                            <span>Моя профиль</span>
                        </a>
                    </li>
                    <li class="profile-aside__item">
                        <a href="#" class="profile-aside__link">
                            <img src="images/profile/2.png" alt="">
